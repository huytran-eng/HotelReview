<% layout('layout/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Hotel</h1>
        <div class="col-6 offset-3">
            <form action="/hotels" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hotel[title]" required>
                    <div class="valid-feedback">
                        Dat yeu cau
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hotel[location]" required>
                    <div class="valid-feedback">
                        Dat yeu cau
                    </div>
                </div>
                <input type="file" name="hotel[image]" id="" multiple>
                <div class="mb-3">
                    <label class="form-label" for="price">Hotel Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="hotel[price]" required>
                    </div>
                    <div class="valid-feedback">
                        Dat yeu cau
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hotel[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Dat yeu cau
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Hotel</button>
                </div>
            </form>
            <a href="/hotels">All Hotels</a>
        </div>
    </div>

    <script>
        (function () {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')
            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>